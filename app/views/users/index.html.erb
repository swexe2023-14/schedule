<%= form_tag '/top/login', method: :post do %>
  <p>
      <%= label_tag :uid, 'ユーザー名' %>
      <%= text_field_tag :uid %>
  </p>
  <p>
      <%= label_tag :pass, 'パスワード' %>
      <%= password_field_tag :pass %>
  </p>
  <%= submit_tag 'ログイン' %>
<% end %>

<% @users.each do |e| %>
    <p>
        ユーザー名：<%= e.uid %>
        PASS:<%= e.pass %>
        <%= link_to '削除', user_path(e), data: {"turbo-method": :delete} %><br>
    </p>
<% end %>
<%= link_to '新規追加', new_user_path %>