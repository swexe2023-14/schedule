<div class="main">
    
    <div id="contents1">
        <%= render "sidebar" %>
    </div>
    
    <div class="contents2">
        <h1>グループ加入</h1>
        <%= form_tag '/top/login', method: :post do %>
          <p>
              <%= label_tag :pass, 'ユーザー名' %>
              <%= text_field_tag :uid %>
          </p>
          <p>
              <%= label_tag :pass, 'パスワード' %>
              <%= password_field_tag :pass %>
          </p>
          <%= submit_tag '加入',class:"custom-submit-button" %>
        <% end %>
        <%=link_to '戻る', mypages_index_path %>
    </div>
</div>


<%= @group.name %>
<% if @group.owner_id == current_user.id %>
    <%= link_to 'Edit', edit_group_path(@group) %>
<% end %>