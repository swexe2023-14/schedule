<div class="main">
    
    <div id="contents1">
        <%= render "sidebar" %>
    </div>
    
    <div class="contents2">
        <h1>グループ加入</h1>
    <%= form_tag '/groups/joingroup', method: :post do %>
          <p>
              <%= label_tag :group_id, 'グループ名' %>
              <%= text_field_tag :group_id%>
          </p>
          <p>
              <%= label_tag :g_pass, 'パスワード' %>
              <%= password_field_tag :g_pass %>
          </p>
          <%= submit_tag '加入',class:"custom-submit-button" %>
        <% end %>
        <%=link_to '戻る', mypages_index_path %>
    </div>
</div>

