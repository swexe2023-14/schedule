<p id="notice"><%= notice %></p>
<div class="main">
  <div id="contents1">
    <%= render "sidebar" %>
  </div>
  
  <div class="contents2">
    <h1>予定</h1>
    <p>
      <strong>内容</strong>
      <%= @event.content %>
    </p>

    <p>
      <strong>日時</strong>
      <%= @event.start_time.strftime("%m-%d") %>
    </p>
    
    <p>
      <strong>コメント</strong>
      <%= @event.comment %>
    </p>

    <%= link_to '編集', edit_event_path(@event),class:"custom-submit-button" %>
    <%= link_to '消去',event_path(@event.id), data: {"turbo-method": :delete} ,class:"custom-submit-button"%>
    <%= link_to '戻る', events_path ,class:"custom-submit-button"%>
  </div>
</div>