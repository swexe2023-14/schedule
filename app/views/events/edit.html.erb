<div class="main">
  <div id="contents1">
    <%= render "sidebar" %>
  </div>
  <div class="contents2">
    <h1>編集画面</h1>
<%= form_with(model: @event, local: true) do |form| %>
  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :content %>
  </div>
  
  <div class="comment">
    <div class="form-tag">コメント</div>
    <%= form.text_field :comment %>
  </div>
  
  <div class="time">
    <div class="form-tag">時間</div>
    <%= form.datetime_select :start_time %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>
</div>
</div>